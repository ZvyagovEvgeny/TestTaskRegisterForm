<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/lightTea</item>
        <item name="colorControlNormal">@color/lightTea</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name = "textInputLayoutStyle">

        <item name="android:paddingLeft">-4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">8dp</item>


    </style>

    <style name="registrationFields">

        <item name="android:textColorHint">@color/lightTea</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_cyr_medium</item>



    </style>



    <style name="fieldNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_cyr_roman</item>

    </style>

    <style name="normal_appearance" parent="@android:style/TextAppearance">
        <item name="colorControlActivated">@color/lightTea</item>
        <item name="colorControlNormal">@color/lightTea</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="warning_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
